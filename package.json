{
  "displayName": "MidnightBot",
  "version": "1.5.0",
  "description": "A Discord Bot to issue infractions in MuselK's Discord Guild.",
  "main": "./dist/Midnight.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register --require babel-polyfill",
    "build": "webpack --config webpack.prod.config.js",
    "start": "npm run build && cd dist && node Midnight.js",
    "debug": "npm-run-all --parallel debug:*",
    "debug:server": "webpack --config webpack.server.config.js && cd dist && node Midnight.js",
    "debug:client": "webpack-dev-server --hot --inline --config webpack.client.config.js --port 8081"

  },
  "author": "BeMacized",
  "license": "GPL-3.0",
  "dependencies": {
    "bluebird": "^3.4.6",
    "bootstrap": "^3.3.7",
    "discord.js": "^11.0.0",
    "emoji-regex": "^6.0.0",
    "emojione": "^2.2.6",
    "express": "^4.14.0",
    "moment": "^2.15.2",
    "moment-timezone": "^0.5.7",
    "mongoose": "^4.6.5",
    "node-schedule": "^1.2.0",
    "pastebin-js": "^0.4.0",
    "randomstring": "^1.1.5",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.0",
    "redis": "^2.6.3",
    "request": "^2.76.0",
    "url-loader": "^0.5.7"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.26.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.0",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1",
    "timeout-as-promise": "^1.0.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
